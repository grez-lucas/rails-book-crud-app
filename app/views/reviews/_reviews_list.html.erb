<% if reviews.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Book</th>
        <th>Review</th>
        <th>Score</th>
        <th>Upvotes</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% reviews.each do |review| %>
        <tr>
          <td><%= link_to review.book.name, review.book %></td>
          <td><%= truncate(review.review, length: 50) %></td>
          <td><%= review.score %> / 5</td>
          <td><%= review.number_of_upvotes %></td>
          <td><%= link_to 'Show', review %></td>
          <td><%= link_to 'Edit', edit_review_path(review) %></td>
          <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No reviews found.</p>
<% end %>
